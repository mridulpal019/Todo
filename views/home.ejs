<html>
    <head>
        <script src="https://kit.fontawesome.com/607b6d4251.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/style.css">
        <title>
            <%= title %>
        </title>

    </head>
    <body>
        <h1><i class="fas fa-tasks"></i> Todo App</h1>
        <hr>
        <form id ="new-task-form" action="/create-task" method="POST">
        <div class="desc">
        <label for="Description">Description</label><br>
        <input type="text" class="add-task" id="add" name="task_desc" placeholder="What do you need to do !!!?" required >
    </div>
    <hr>
    <div class="other-desc">
        <div class="category">
            <label for="Category">Category</label>
            <br>
            <select name="category" id="category" required >
                <option value="" selected="selected">Select Category</option>
                <option value="Work">Work</option>
                <option value="Personal">Personal</option>
                <option value="College">College</option>
                <option value="Study">Study</option>
                <option value="Hobby">Hobby</option>
            </select>
        </div>
        <div class="deadline">
            <label for="Deadline"> Deadline</label>
            <br>
            <input type="date" name="deadline" id="deadline" required>
        </div>
    </div>
    <hr>
    <div class="buttons">
        <div class="add-task-button">
            <button id="add-button"> <i class="fas fa-plus"></i>Add task </button>

        </div>
        
        
</form>

<div class="delete-task-button">
    <button id="delete-task" form="delete-form" type="submit" ><i class="fas fa-trash"></i> Delete Task</button>

</div>
</div>
  
    
    <div class="task-list-container">
        <form action="/delete-task" id="delete-form" method="get">
        <ul>
            <%for (let i of task_list){%>
                <li class="taask">
                <div class="details">
                <div class="check-box">
                    <input type="checkbox" name="<%= i.id %>" class="custom-checkbox">
                    
                </div>
                    <div class="desc">
                    <p>
                        <%= i.task_desc%>
                    </p>
                    
                    <p>
                        <i class="fas fa-calendar"></i>
                        <%= i.deadline%>
    
                    </p>
                </div>
                   
                </div>
                <div class="category-outbox">
                    <p>
                        <%= i.category %>
                    </p>
                </div>
                </li>
                <hr>
                <%}%>
    
        </ul>
    </form>
    <!--</div>

        <label for="${task.id}">"${task.title}"</label>
        <img src="bin.png" class="delete" data-id="${task.id}" />
    </div>

    -->



     <script src="/js/action.js"></script>   
    </body>
</html>